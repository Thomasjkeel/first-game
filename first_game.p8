  player.x-=2
 end

 if btn(1) then
  player.x+=2
 end
 if btn(2) then
  player.y-=2
 end
 if btn(3) then
  player.y+=2
 end
 if btnp(4) then
  sfx(1)
 end
 if btnp(5) then
  pal(player.color,8)
 end

end

